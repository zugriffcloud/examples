---
import Layout from "../layouts/Layout.astro";

let now = new Date();
---

<Layout title="Welcome to Astro.">
  <main>
    {now.toISOString()}
  </main>
</Layout>

<style>
  main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>